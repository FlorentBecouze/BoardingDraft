<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AccueilActivity">


    <TextView
        android:id="@+id/titreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/orange"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/image_accueil" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_fonce"
            android:text="@string/bouton_lancer_vote" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_fonce"
            android:text="@string/bouton_liste_jeux"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/joueurTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:text="@string/texte_joueurs"
        android:textSize="20sp"
        android:textColor="@color/gris"
        android:textStyle="bold"/>
    
    <ListView
        android:id="@+id/liste_joueurs"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="420dp"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"/>


    <EditText
        android:id="@+id/saisie_joueur"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="620dp"
        android:hint="@string/texte_liste"/>



</FrameLayout>